@model CouponDTO

<form asp-action="CouponDelete">
    <br />
    <div class="container border p-3" style="width:50%">
        <div class="card-header bg-danger bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="">Delete Coupon</h1>
                </div>
            </div>
        </div>
        <input asp-for="CouponId" hidden />
        <hr />
        <div class="row">
            <div class="col-4">
                <label class="control-label pt-2" style="font-size:20px;">Coupon Code</label>
            </div>
            <div class="col-8 pb-3">
                <input asp-for="CouponCode" class="form-control" disabled />
            </div>
            <div class="col-4">
                <label class="control-label pt-2" style="font-size:20px;">Discount Amount</label>
            </div>
            <div class="col-8 pb-3">
                <input asp-for="DiscountAmount" class="form-control" disabled />
            </div>
            <div class="col-4">
                <label class="control-label pt-2" style="font-size:20px;">Minimum Amount</label>
            </div>
            <div class="col-8 pb-3">
                <input asp-for="MinAmount" class="form-control" disabled />
            </div>

            <div class="col-4 offset-4">
                <a asp-action="CouponIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-4">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>
